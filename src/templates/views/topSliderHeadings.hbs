<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title> Admin  - Top Slider Headings</title>
     {{>back_headerlink}}
    
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

      {{>back_sidebar}}
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

              {{>back_navbar}}



                  <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    {{!-- <h1 class="h3 mb-2 text-gray-800">Students</h1> --}}
                    

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 mt-2 font-weight-bold text-primary"> Top Slider <i class="fas fa-angle-double-right"></i> Headings</h6>
                         <div class="float-right d-inline">
                             <a href="/admin/addTopSliderHeading">
<button type="button" class="btn btn-primary btn-sm mb-2"> <i class="fa fa-plus"></i> Add New</button></a>



                        </div>
                        </div>
                        <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Sl No.</th>
                      <th>Page Name</th>
                      <th>Title</th>
                      <th>Heading</th>
                      <th>Rera_Number</th>
                      <th>Land_Area</th>
                      <th>Total_Towers</th>
                      <th>Total_Floors</th>
                      <th>Total_Units</th>
                      <th>Configuration</th>
                      <th>Size_Range</th>
                      <th>Status</th>
                      <th>Starting_Price</th>
                      <th>Action</th>
                    </tr>
                  </thead>
              
                  <tbody>
                

                     {{#each result}}   

                    <tr>
                      <td> {{sl @index}}</td>
                       <td>{{#each page_name}}{{page_name}}{{/each}}</td>
                        <td>{{page_title}}</td>
                        <td>{{heading}}</td>
                        <td>{{rera_number}}</td>
                        <td>{{land_area}}</td>
                        <td>{{total_towers}}</td>
                        <td>{{total_floors}}</td>
                        <td>{{total_units}}</td>
                        <td>{{configuration}}</td>
                        <td>{{size_range}}</td>
                        <td>{{status}}</td>
                        <td>{{starting_price}}</td>  
                        <td>
                        <a href="/admin/editTopSliderHeading/{{_id}}" class="btn btn-info"><i class="fas fa-edit"></i></a>
                        <a onclick="deleteData('{{_id}}')" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                       </td>
                     </tr>
                    {{/each}}

                  </tbody>
                </table>
                         </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

         {{>back_footer}}
         

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

  {{>back_fotterlink}}

  {{#if message}}
<script>
  Swal.fire({
  position: 'center',
  icon: '{{status}}',
  title: '{{title}}',
  text: "{{message}}",
  showConfirmButton: true,
  timer: 1000
})
</script>
{{/if}}

<script>
function deleteData(id)
{ 
Swal.fire({
title: 'Are you sure?',
text: "You won't be able to revert this!",
icon: 'warning',
showCancelButton: true,
confirmButtonColor: '#3085d6',
cancelButtonColor: '#d33',
confirmButtonText: 'Yes, delete it!'
}).then((result) => {
if (result.isConfirmed) {
const endpoint = `/admin/topSliderHeadings/${id}`;
fetch(endpoint,{
method: 'DELETE'
})
.then((response) => response.json())
.then((data) => window.location.href = data.redirect)
.catch(err => console.log(err));
}
})
}
</script>



</body>

</html>