<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Admin  Register</title>
    {{>headerlink}}
</head>

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Welcome Register!</h1>
                                       {{#if passIsmatch}}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Opps!</strong> {{passIsmatch}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    {{/if}}
                                    </div>
                                    <form class="user" action="/createaccount" method="post">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user {{#if error.errors.name.message}} is-invalid {{/if}}" value="{{set.name}}" name="name" placeholder="Enter Name">
                                        </div>

                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user  {{#if error.errors.email.message}} is-invalid {{/if}}"
                                                 name="email" value="{{set.email}}" aria-describedby="emailHelp"
                                                placeholder="Enter Email Address...">
                                                {{#if error.errors.email.message}} <p class="text-danger ml-2">{{error.errors.email.message}}</p> {{/if}}
                                                {{#if error.keyPattern.email}}<p class="text-danger">This Email Already Exits.</p> {{/if}}
                                        </div>
                                        <div class="form-group">
                                            <input type="password" name="password" value="{{set.password}}" class="form-control form-control-user  {{#if error.errors.password.message}} is-invalid {{/if}}"
                                                placeholder="Password">
                                                
                                        </div>
                                         <div class="form-group">
                                            <input type="password" name="confirmpassword" value="{{set.confirmpassword}}" class="form-control form-control-user  {{#if error.errors.confirmpassword.message}} is-invalid {{/if}}"
                                                placeholder="Confirm Password">
                                                
                                        </div>
                                        <input type="submit" name="submit" value="Create" class="btn btn-primary btn-user btn-block" >
                                       

                                        <a href="/admin/dashboard" class="btn btn-primary btn-user btn-block">
                                            Dashboard
                                        </a>
                                        <hr>
                                        <a href="#" class="btn btn-google btn-user btn-block">
                                            <i class="fab fa-google fa-fw"></i> Login with Google
                                        </a>
                                        <a href="#" class="btn btn-facebook btn-user btn-block">
                                            <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
                                        </a>
                                    </form>
                                    <hr>
                        
                                    <div class="text-center">
                                        <a class="small" href="/admin/login">Login!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

{{>fotterlink}}
</body>
</html>